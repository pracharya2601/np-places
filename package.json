{
  "name": "np-places",
  "version": "0.0.0-development",
  "description": "States, district and cities of nepal",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js",
    "build": "npm-run-all --parallel build:*",
    "lint": "eslint src",
    "watch:test": "mocha --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "cross-env NODE_ENV=test nyc mocha ./src/* ",
    "validate": "npm-run-all lint test build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pracharya2601/np-places.git"
  },
  "keywords": [
    "nepal palces",
    "np places"
  ],
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "author": "Prakash <pracharya2601@gmail.com> (https://prakashacharya.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pracharya2601/np-places/issues"
  },
  "homepage": "https://github.com/pracharya2601/np-places#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ghooks": "^2.0.4",
    "json-loader": "^0.5.7",
    "mocha": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2",
    "semantic-release": "^17.4.4"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
